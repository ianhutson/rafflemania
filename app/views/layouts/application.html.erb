<!DOCTYPE html>
<html>
  <head>
    <title>Rafflemania</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if current_user %>
  <div class="navbar" id="">
    <ul class="navbar-nav">
    <li class="nav-item ">
          <%= link_to "Home", root_url %>
        </li>
        <li class="nav-item ">
          <%= link_to "Edit Profile", edit_user_path(current_user) %>
        </li>
         <li class="nav-item ">
          <%= link_to "Get Tickets", edit_ticket_path(current_user) %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign Out", '/sign_out', :method => :delete %>
        </li>
      </ul>
    </div>
    <%end%>
    <%= yield %>


  <div class="footer"><br>
    <small><a id="email" href="https://github.com/ianhutson"> Contact Us</a></small> 
  </footer>
  </body>
</html>
