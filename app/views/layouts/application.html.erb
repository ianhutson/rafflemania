<!DOCTYPE html>
<html>
  <head>
    <title>Rafflemania</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <p>Welcome to RaffleMania!</p>
  <% if current_user %>
  <div class="navbar" id="">
    <ul class="navbar-nav">
    <li class="nav-item ">
          <%= link_to "Home", root_url %>
        </li>
        <li class="nav-item ">
          <%= link_to "Profile", edit_registration_path(current_user) %>
        </li>
        <li class="nav-item ">
          <%= link_to "History", user_path(current_user) %>
        </li>
         <li class="nav-item ">
          <%= link_to "Get Tickets", new_ticket_path %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign Out",  destroy_user_session_path, method: :delete %>
        </li>
        <li class="profile_item">
          <%= current_user.username%> 
        </li>
        <li class="profile_item">
          Tickets: Gold - <%=current_user.tickets.where(:tier => 'gold', :used => false).count %> | Silver - <%=current_user.tickets.where(:tier => 'silver', :used => false).count %> | Bronze - <%=current_user.tickets.where(:tier => 'bronze', :used => false).count %>
        </li>
      </ul>
    </div>
    <%end%>
    <% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

    <%= yield %>


  <div class="footer"><br>
    <small><a id="email" href="https://github.com/ianhutson"> Contact Us</a></small> 
  </footer>
  </body>
</html>
