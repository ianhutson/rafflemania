<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if @user && @user.username != nil%>
    <% current_user.raffles.where(winner: current_user.username, updated_at: 5.minutes.ago) != "" %>
    <p>Attention! You have recently won a raffle. Please check your raffle history.</p>   
  <%end%>
  <% if current_user %>
  <div class="topnav" id="">
        <div class="nav-item ">
         <%= link_to "Home", root_url %>
        </div >
        <div class="nav-item ">
          <%= link_to "Profile", edit_registration_path(current_user) %>
        </div >
        <div class="nav-item ">
          <%= link_to "History", raffle_users_path(current_user) %>
        </div >
         <div class="nav-item ">
          <%= link_to "Get Tickets", new_ticket_path %>
        </div >
        <div class="nav-item ">
          <%= link_to "Sign Out",  destroy_user_session_path, method: :delete %>
        </div >
    

        <div class="profile_item">
        <div class="user" style="margin-right:10%">
          <%= current_user.username%> 
        </div><br>
        <div class="user">
          Tickets: <%= image_tag "gold.jpg", class: "small_ticket" %>Gold (3 Entries) - <%=current_user.tickets.where(:tier => 'gold', :used => false).count %> | <%= image_tag "silver.jpg", class: "small_ticket" %> Silver (2 Entries) - <%=current_user.tickets.where(:tier => 'silver', :used => false).count %> | <%= image_tag "bronze.jpg", class: "small_ticket" %> Bronze (1 Entry) - <%=current_user.tickets.where(:tier => 'bronze', :used => false).count %>
        </div>
      </ul>
      <img class="container3" src='assets/logo.jpg'>
    </div> </div >
   
    <%end%>
    
    <% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

    <%= yield %>


  <div class="footer"><br><div class="container">
   <a href="https://github.com/ianhutson"> Contact Us</a></div><br>
  </footer>
  </body>
</html>
