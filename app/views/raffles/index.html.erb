   <%if !current_user%> 
     <div class="navbar" id="">
    <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to "Sign in", root_url %>
        </li>
      </ul>
    </div>
    <%end%>

<h1>Current Raffles:</h1>
<%= form_tag(raffles_path, method: 'get') do %>
  <%= select_tag(:filter, options_for_select(Raffle.pluck(:category).uniq, params[:filter])) %>
  <%= submit_tag ("Filter") %>
<% end %>


 <table class="table">
  <thead>
    <th colspan="3"></th>
  </thead>
  <tbody>
    <% @raffles.where(winner: nil).each do |raffle| %>
        <p><strong>Product</strong></p>
        <p> <% if raffle.winner%>
        <b><%=raffle.winner%> has won this raffle!</b>
        <% end %>
        <p><%= raffle.product_name %></p>
        <br>
        <p><img src="<%= raffle.product_image%>"></p>
        <br>
        <p><strong>Product Description</strong></p>
        <p><%= raffle.product_description %></p>
        <br>
        <p><strong>Spots Left</strong></p>
        <p><%= (raffle.tickets.where(:tier => :gold).count*3) + (raffle.tickets.where(:tier => :silver).count*2) + (raffle.tickets.where(:tier => :bronze).count) %> / <%= raffle.number_of_ticket_slots %>
        <%= link_to "Enter Raffle", edit_raffle_path(raffle) %></p>
    <% end %>
  </tbody>
</table>
<br>
