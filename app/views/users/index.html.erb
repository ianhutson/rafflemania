<div class="container">
<div class="title">Current Bids:</div><br>
<% current_user.raffles.uniq.each do |raffle| %>
 <% if raffle.winner == nil%>
        <p><%= raffle.product_name %></p>
        <br>
        <p><img class="img" src="<%= raffle.product_image%>"></p>
        <br>
        <div>
        Gold:<%= image_tag "gold.jpg", class: "small_ticket" %> <%=raffle.current_tickets(current_user, :gold)%>
        Silver:<%= image_tag "silver.jpg", class: "small_ticket" %> <%=raffle.current_tickets(current_user, :silver)%>
        Bronze: <%= image_tag "bronze.jpg", class: "small_ticket" %><%=raffle.current_tickets(current_user, :bronze)%></div><br>
    <% end %>  <% end %> 
</div>
</div>

<div class="container">
<div class="title">Raffle History:</div><br>
<% current_user.raffles.uniq.each do |raffle| %>
<%if raffle.winner == nil%>
<%else%>
        <p><%= raffle.product_name %></p>
        <% if raffle.winner == current_user.username%>
        <p style="color:green"><strong>WON</strong></p>
        <% else %>
        <p style="color:red"><strong>LOST</strong></p>
            <% end %>
        <br>
        <p><img class="img" src="<%= raffle.product_image%>"></p>
        <br>
        <div>
        Gold:<%= image_tag "gold.jpg", class: "small_ticket" %> <%=raffle.current_tickets(current_user, :gold)%>
        Silver:<%= image_tag "silver.jpg", class: "small_ticket" %> <%=raffle.current_tickets(current_user, :silver)%>
        Bronze: <%= image_tag "bronze.jpg", class: "small_ticket" %><%=raffle.current_tickets(current_user, :bronze)%></div><br>
        <% end %>
<% end %> 
</div>

